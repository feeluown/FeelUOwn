QWidget {
    /* font-size: 13px; */
    /* tips: you can turn on border for debugging */
    /* border: 1px solid red; */
}

LeftPanel QLabel {
    padding-top: 3px;
    padding-bottom: 3px;
    font-size: 12px;
    font-weight: bold;
}

LeftPanel QListView {
    margin-left: 5px;
}

LeftPanel QListView, QSplitter::handle {
    background-color: transparent;
}

DescLabel {
    background-color: palette(base);
}

MagicBox {
    background: transparent;
    border-bottom: 1px dashed #777;
}
MagicBox:focus {
    border-bottom: 1px solid #777;
    background: palette(window);
    outline: none;
}

/*
 * buttons
 */
PlayerControlPanel IconButton, VolumeButton, #playlist_btn {
    width: 30px;
    height: 30px;
    border-radius: 15px;
    outline: none;
}
PlayerControlPanel IconButton:hover, VolumeButton:hover{
    /* just to make button (looks) smaller */
    border-width: 3px;
}
#volume_btn:checked {
    border-width: 3px;
}
#song_source_label {
    outline: none;
    border-radius: 2px;
    color: #888;
    border: 1px solid #999;
    font-size: 12px;
}
PlayerControlPanel QPushButton:hover,
PlayerControlPanel QPushButton:focus
{
    outline: none;
}

TextButton {
    height: 18px;
    background-color: transparent;
    padding: 2px 8px;
    border-radius: 3px;
}
ToolbarButton {
    width: 30px;
    height: 30px;
    border-radius: 15px;
    font-size: 15px;
    border: 0px;
}
TextButton:hover, ToolbarButton:hover {
    border: 1px solid #777;
}
TextButton:checked {
    border: 1px solid #d75a4a;  /* same as like_btn red color */
    color: #d75a4a;
}
#mv_btn, #toggle_lyric_btn {
    font-size: 9px;
}
#mv_btn {
    padding: 0px 3px;
}
#toggle_lyric_btn {
    padding: 0px 5px;
}
#toggle_video_btn, #toggle_pip_btn {
    padding: 0px 3px;
}

LeftPanel ListViewContainer TextButton {
    padding: 0px 2px;
    border: none;
}

VideoCtlToolbar QPushButton {
    width: 24px;
    height: 24px;
    outline: none;
}
